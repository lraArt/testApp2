<?xml version="1.0" encoding="utf-8"?>
<resources>


    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>


    <!--涟漪控件属性-->

    <declare-styleable name="mRippleView">

        <attr name="cColor" format="color" />

        <attr name="cSpeed" format="integer" />

        <attr name="cDensity" format="integer" />

        <attr name="cIsFill" format="boolean" />

        <attr name="cIsAlpha" format="boolean" />

    </declare-styleable>
    <declare-styleable name="AnimationImageView">
        <attr name="loopCount" format="integer" />
        <attr name="loopBehavior">
            <flag name="loop_finite" value="1" />
            <flag name="loop_inf" value="2" />
            <flag name="loop_default" value="3" />

        </attr>
        <attr name="srcType">
            <flag name="webp" value="1" />
            <flag name="gif" value="2" />
        </attr>
    </declare-styleable>
</resources>